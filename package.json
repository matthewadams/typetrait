{
  "name": "@scispike/typetrait",
  "version": "0.1.0-pre.0",
  "description": "Trait support for Typescript",
  "homepage": "https://github.com/SciSpike/typetrait#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/SciSpike/typetrait.git"
  },
  "keywords": [
    "trait",
    "traits",
    "mixin",
    "mixins",
    "typescript"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=10.12.0"
  },
  "scripts": {
    "build": "npm install && npm test",
    "transpile": "run-s transpile-main transpile-test",
    "transpile-main": "rm -rf dist && tsc -p tsconfig.main.json",
    "transpile-test": "rm -rf lib && tsc -p tsconfig.test.json",
    "unit-integration": "nyc --check-coverage --statements 80 --branches 80 --functions 80 --lines 80 mocha 'lib/test/unit/**/*.spec.js' 'lib/test/integration/**/*.spec.js'",
    "postunit-integration": "run-s report",
    "integration": "nyc --check-coverage -x 'lib/test' --exclude-after-remap false mocha 'lib/test/integration/**/*.spec.js'",
    "postintegration": "run-s report",
    "i": "mocha -r ts-node/register 'src/test/integration/**/*.spec.ts'",
    "unit": "nyc --check-coverage -x 'lib/test' --exclude-after-remap false mocha 'lib/test/unit/**/*.spec.js'",
    "postunit": "run-s report",
    "u": "mocha -r ts-node/register 'src/test/unit/**/*.spec.ts'",
    "test": "run-s transpile-test unit-integration lint",
    "report": "nyc report --reporter=html",
    "cov": "open coverage/index.html",
    "lint": "standard --verbose 'src/**/*.ts'",
    "format": "standard --fix 'src/**/*.ts'",
    "make-distribution": "run-s transpile finalize-distribution",
    "finalize-distribution": "copyfiles --verbose package.tson package-lock.tson README.md lib/main",
    "prelink": "run-s make-distribution",
    "link": "cd lib/main && npm link; cd ../..",
    "unlink": "cd lib/main && npm unlink; cd ../.."
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "0.1.3",
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.7",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "acorn": "6.2.1",
    "chai": "4.2.0",
    "copyfiles": "2.1.1",
    "dirty-chai": "2.0.1",
    "mocha": "6.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "14.1.1",
    "source-map-support": "0.5.12",
    "standard": "13.1.0",
    "ts-node": "8.3.0",
    "typescript": "3.5.3"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "reporter": [
      "html"
    ]
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "colors": true,
    "full-trace": true
  }
}
